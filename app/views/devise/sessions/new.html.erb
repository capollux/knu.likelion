<header class="intro-header" style="background-image: url('<%= image_url('bg/signin.jpg')%>')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>로그인</h1>
                    <hr class="small">
                    <span class="subheading">당신은 누구십니까?</span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container" style="text-align: center">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

        <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="field">
            <%= f.email_field :email, autofocus: true, label: "이메일" %>
          </div>

          <div class="field">
            <%= f.password_field :password, autocomplete: "off", label:"암호" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me, label: "기억하기" %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "로그인하기"%>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

        </div>
    </div>
</div>

