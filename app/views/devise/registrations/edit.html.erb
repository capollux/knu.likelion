<header class="intro-header" style="background-image: url('<%= image_url('bg/devise-edit.png')%>')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading" style="padding-top: 100px; padding-bottom: 50px;">
                    <img src="<% if resource.profile.url.nil? %><%= image_url('team/lion.png') %><% else %><%= resource.profile.url %><% end %>" width="220px" class="img-circle">
                    <hr class="small">
                    <span class="subheading">정보 수정</span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container" style="text-align: center">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
          <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= devise_error_messages! %>

            <div class="field">
              <%= f.text_field :name, label: "이름" %>
            </div>

            <div class="field">
              <%= f.file_field :profile, label: "사진", accept:"image/*" %>
            </div>

            <div class="field">
              <%= f.email_field :email, :disabled => true, label: "이메일"  %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="field">
              <%= f.password_field :password, autocomplete: "off", label:"암호 (변경을 원할 경우에만 입력)" %>
            </div>

            <div class="field">
              <%= f.password_field :password_confirmation, autocomplete: "off", label: "암호 확인" %>
            </div>

            <div class="field">
              <%= f.password_field :current_password, autocomplete: "off", label: "현재 암호 (변경 사항 저장을 위해 입력)" %>
            </div>

            <div class="actions">
              <%= f.submit "수정하기" %>
            </div>
          <% end %>

          <h3>계정 삭제</h3>

          <p><%= button_to "삭제하기", registration_path(resource_name), data: { confirm: "정말 떠나가나요?" }, method: :delete , class: "form-group btn btn-default"%></p>

          <%= link_to "돌아가기", :back %>
          </div>
      </div>
</div>
